generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id                 Int      @id @default(autoincrement())
  title              String
  description        String?
  status             String
  priority           String
  imageURL           String?
  createdAt          DateTime @default(now())
  assignedEmployeeId Int
  assignedEmployee   Employee @relation(fields: [assignedEmployeeId], references: [id])
  isDeleted          Boolean  @default(false)
}

model Employee {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  position      String?
  contactNo     String?
  email         String?
  workingStatus WorkingStatus @default(Working)
  assignedTask  Task[]
}

enum WorkingStatus {
  Working
  Not_Working
}
